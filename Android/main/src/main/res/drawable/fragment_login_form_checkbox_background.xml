<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape >
                    <solid android:color="@color/fragment_login_form_edittext_background" />
                    <corners android:radius="@dimen/fragment_login_form_radius" />
                </shape>
            </item>

            <!-- main color -->
            <item android:top="@dimen/fragment_login_form_border"
                  android:right="@dimen/fragment_login_form_border"
                  android:left="@dimen/fragment_login_form_border"
                  android:bottom="@dimen/fragment_login_form_border">
                <shape >
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/fragment_login_form_radius" />
                </shape>
            </item>

            <item android:top="5dp"
                  android:right="3dp"
                  android:left="3dp"
                  android:bottom="5dp">
                <bitmap android:src="@drawable/fragment_login_form_checkbox_check" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape >
                    <solid android:color="@color/fragment_login_form_edittext_background" />
                    <corners android:radius="@dimen/fragment_login_form_radius" />
                </shape>
            </item>

            <!-- main color -->
            <item android:top="@dimen/fragment_login_form_border"
                  android:right="@dimen/fragment_login_form_border"
                  android:left="@dimen/fragment_login_form_border"
                  android:bottom="@dimen/fragment_login_form_border">
                <shape >
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/fragment_login_form_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
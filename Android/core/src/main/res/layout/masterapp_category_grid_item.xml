<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="fill_parent" android:gravity="center"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/category_image" android:scaleType="centerCrop"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingLeft="2dp"
            android:paddingRight="2dp" android:background="#77000000" android:gravity="center_vertical"
            android:layout_gravity="bottom">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/category_text" android:textColor="@color/white"
                android:textSize="14dp" android:singleLine="false" android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
    </LinearLayout>
</FrameLayout>